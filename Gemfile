  gem "bundler"
  gem "jeweler"

  if RUBY_VERSION =~ /^1\.9/
  	gem "simplecov", ">= 0"
  else
  	gem "rcov", ">= 0"
  end

  gem "rspec", ">= 1.3.4"
end
